@{
    ViewData["Title"] = "Data Prediction - Home Page";
}

@model Utah_Crash

<div class="col-xl-8 col-lg-7">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Run Your Prediction</h6>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="Inference" asp-action="Crash">

                <div>
                    <label>Milepoint:</label>
                    <input asp-for="MILEPOINT" value="0" />
                </div>

                <br />
                <button type="submit">Calculate</button>
            </form>
        </div>

    </div>
</div>