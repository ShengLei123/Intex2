                    <label asp-for="TeamID">Bowling Team: </label>
                    <select asp-for="TeamID" class="form-group col-sm">
                        @foreach (Team t in ViewBag.Teams)
                        {
                            <option value="@t.TeamID">@t.TeamName</option>
                        }

                    </select>
                    <br />
                </div>*@
        </div>
    </body>
